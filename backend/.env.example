# Aegis Backend Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# JWT Authentication
# IMPORTANT: Change this to a random 32+ character string in production
JWT_SECRET=aegis-demo-secret-change-in-production

# Anthropic API (optional - enables real AI analysis)
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI Safety Controls
AI_MAX_TOKENS_PER_REQUEST=1024
AI_DAILY_REQUEST_LIMIT=1000
